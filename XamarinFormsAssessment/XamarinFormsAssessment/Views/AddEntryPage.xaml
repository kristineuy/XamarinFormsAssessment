<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsAssessment.AddEntryPage"
             Title="Add Entry">
    <StackLayout Padding="10" Spacing="5">
        <StackLayout Orientation="Horizontal">
            <Label Text="First Name" VerticalOptions="Center" FontSize="16" />
            <Entry x:Name="firstNameField" WidthRequest="300" FontAttributes="Bold"/>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label Text="Last Name" VerticalOptions="Center" FontSize="16" />
            <Entry x:Name="lastNameField" WidthRequest="300" FontAttributes="Bold" />
        </StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label Text="Date of Birth" VerticalOptions="Center" FontSize="16" />
            <DatePicker x:Name="dateOfBirthField" WidthRequest="290" FontAttributes="Bold" />
        </StackLayout>

        <Button Text="Save" Clicked="OnSaveButtonClicked" FontSize="Medium" FontAttributes="Bold" BackgroundColor="Turquoise" CornerRadius="5"/>
    </StackLayout>
</ContentPage>
